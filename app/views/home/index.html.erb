<div
  data-controller="earth"
  data-earth-target="mount"
  data-earth-earth-url-value="<%= asset_path('earth_day.jpg') %>"
  data-earth-satellite-url-value="<%= asset_path('satellite.png') %>"
  class="bg-canvas home-canvas">
</div>

<div class="home-container" id="main">
  <%= render "layouts/navbar" %>

  <section class="home-hero" aria-labelledby="hero-title">
    <div class="home-hero__content">
      <!-- Threat Badge -->
      <div class="threat-badge">
        <span class="threat-badge__icon">⚠️</span>
        <span class="threat-badge__text">NASA Space Apps Challenge 2025</span>
      </div>

      <!-- Main Title -->
      <h1 id="hero-title" class="home-hero__title">
        <span class="home-hero__title-line">35k+ Near-Earth</span>
        <span class="home-hero__title-line home-hero__title-line--gradient">Asteroids Monitored</span>
      </h1>

      <!-- Subtitle -->
      <p class="home-hero__subtitle">
        Simulate asteroid impacts. Calculate damage zones. Explore mitigation strategies.<br>
        Built with real NASA & USGS data and physics-based impact modeling.
      </p>

      <!-- Live Stats -->
      <div class="home-stats">
        <div class="home-stat">
          <div class="home-stat__value">35,000+</div>
          <div class="home-stat__label">Near-Earth Objects</div>
        </div>
        <div class="home-stat">
          <div class="home-stat__value">~2,350</div>
          <div class="home-stat__label">Potentially Hazardous</div>
        </div>
        <div class="home-stat">
          <div class="home-stat__value">Real-Time</div>
          <div class="home-stat__label">NASA Data</div>
        </div>
      </div>

      <!-- Main CTA -->
      <%= link_to start_simulation_path, class: "home-cta" do %>
        <span class="home-cta__icon">☄️</span>
        <span class="home-cta__text">Explore Impact Scenarios</span>
        <span class="home-cta__arrow">→</span>
      <% end %>

      <!-- Secondary Info -->
      <p class="home-hero__meta">
        Heliocentric orbital mechanics • Physics-based impact modeling • Interactive 3D visualization
      </p>
    </div>
  </section>
</div>
