<div
  data-controller="earth"
  data-earth-target="mount"
  data-earth-earth-url-value="<%= asset_path('earth_day.jpg') %>"
  data-earth-satellite-url-value="<%= asset_path('satellite.png') %>"
  class="bg-canvas home-canvas">
</div>

<div class="home-container" id="main">
  <%= render "layouts/navbar" %>
  <%= render "layouts/right_sidebar" %>

  <section class="home-hero" aria-labelledby="hero-title">
    <div class="home-hero__content">
      <!-- Threat Badge -->
      <div class="threat-badge" aria-label="<%= t('home.hero.badge_aria') %>">
        <span class="threat-badge__icon">⚠️</span>
        <span class="threat-badge__text"><%= t('home.hero.badge') %></span>
      </div>

      <!-- Main Title -->
      <h1 id="hero-title" class="home-hero__title">
        <span class="home-hero__title-line"><%= t('home.hero.title_line1', count_short: '35k+') %></span>
        <span class="home-hero__title-line home-hero__title-line--gradient"><%= t('home.hero.title_line2') %></span>
      </h1>

      <!-- Main CTA -->
      <%= link_to start_simulation_path, class: "home-cta", 'aria-label': t('home.cta.aria') do %>
        <span class="home-cta__icon">☄️</span>
        <span class="home-cta__text"><%= t('home.cta.text') %></span>
        <span class="home-cta__arrow">→</span>
      <% end %>

      <!-- Subtitle -->
      <p class="home-hero__subtitle"><%= t('home.hero.subtitle_html').html_safe %></p>

      

      <!-- Secondary Info -->
      <p class="home-hero__meta"><%= t('home.hero.meta') %></p>
    </div>
  </section>
</div>
